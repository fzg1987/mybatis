<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fzg.repository.AccountRepository">
    <resultMap id="accountMap" type="com.fzg.entity.Account">
        <id column="aid" property="id"/>
        <result column="aname" property="name"/>
        <collection property="courses" ofType="com.fzg.entity.Course">
            <id column="cid" property="id"/>
            <result column="cname" property="name"/>
        </collection>
    </resultMap>
    <select id="findById" parameterType="java.lang.Integer" resultMap="accountMap">
        select a.id aid,a.name aname,c.id cid,c.name cname from t_account a,t_course c,account_course ac where a.id = #{id} and a.id = ac.aid and c.id = ac.cid
    </select>
</mapper>